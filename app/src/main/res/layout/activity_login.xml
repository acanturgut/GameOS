<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:background="@color/myWhite"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.canta.project2.MainActivity">

    <Button
        android:text="Let's Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_button"
        android:textColor="@color/myWhite"
        android:textStyle="normal|bold"
        android:layout_marginTop="50dp"
        android:layout_alignTop="@+id/player_name_edittext"
        android:layout_alignLeft="@+id/player_name_edittext"
        android:layout_alignStart="@+id/player_name_edittext"
        android:layout_alignRight="@+id/player_name_edittext"
        android:layout_alignEnd="@+id/player_name_edittext"
        android:background="@drawable/button_normal"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GameOS"
        android:id="@+id/textView"
        android:textStyle="normal|bold"
        android:textSize="50sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Enter Your Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textColor="@color/myRed"
        android:textSize="30sp"
        android:layout_above="@+id/go_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/player_name_edittext"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:layout_marginTop="95dp"
        android:background="@drawable/editextstyle"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>




