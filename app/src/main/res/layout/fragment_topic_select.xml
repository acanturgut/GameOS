<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite"
    tools:context="com.example.canta.project2.TopicSelectFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:text="PlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_name"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="20sp"
                    android:textColor="@color/myRed" />

                <TextView
                    android:text="Score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/score_topic"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textStyle="normal|bold"
                    android:textSize="20sp"
                    android:textColor="@color/myRed" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="Sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textSize="26sp"
                    android:textColor="@color/myGreen"
                    android:padding="10dp" />

                <TextView
                    android:text="Math"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textSize="26sp"
                    android:textColor="@color/myBlue"
                    android:padding="10dp" />

                <TextView
                    android:text="History"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textSize="26sp"
                    android:textColor="@color/History"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sport_500"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/math_500"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_500"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sport_400"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/math_400"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_400"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sport_300"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/math_300"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_300"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sport_200"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/math_200"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_200"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <Button
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sport_100"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/math_100"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_100"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:background="@drawable/button_q_low"
                    android:padding="6dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/myWhite"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:text="Restart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/restart_button"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:elevation="23dp"
                android:background="@drawable/button_q_low" />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
