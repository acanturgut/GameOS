<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.canta.project3.ChallangesAndFriendRequestsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="My Challenges"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="My Challenges" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Friend Requests"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="Friend Requests" />

        <ListView
            android:id="@+id/list_view2"
            android:layout_width="match_parent"
            android:layout_height="85dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/warning_this"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3.71"
                android:text="Waiting for request !"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Waiting for request !" />

            <ProgressBar
                android:id="@+id/progress_bar_main"
                style="?android:attr/progressBarStyle"
                android:layout_width="105dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
