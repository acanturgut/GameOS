<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite"
    tools:context="com.example.canta.project3.MemoryGameSelectionFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:text="MEMOGAME"
            android:textColor="@color/myRed"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="36dp"
            android:text="4X4"
            android:textAlignment="center"
            android:textColor="@color/myRed"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playmemo4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:background="@drawable/button_normal"
            android:backgroundTint="@color/myRed"
            android:text="PLAY"
            android:textColor="@color/myWhite"
            android:layout_alignEnd="@+id/textView6"
            android:layout_toEndOf="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/playmemo4"
            android:layout_alignStart="@+id/playmemo4"
            android:layout_below="@+id/playmemo4"
            android:layout_marginTop="15dp"
            android:text="5X5"
            android:textAlignment="center"
            android:textColor="@color/myRed"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playmemo5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:background="@drawable/button_normal"
            android:text="PLAY"
            android:textColor="@color/myWhite"
            android:layout_alignEnd="@+id/playmemo6" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/playmemo6"
            android:layout_alignStart="@+id/playmemo5"
            android:layout_below="@+id/playmemo5"
            android:layout_marginTop="12dp"
            android:text="6X6"
            android:textAlignment="center"
            android:textColor="@color/myRed"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playmemo6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:background="@drawable/button_normal"
            android:text="PLAY"
            android:textColor="@color/myWhite"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignStart="@+id/textView11" />

    </RelativeLayout>
</FrameLayout>
